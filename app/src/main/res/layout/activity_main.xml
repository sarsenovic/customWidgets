<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_test"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--<Button-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="50dp"-->
    <!--android:background="@color/sweet_green" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/text_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#30cfd0"
            android:gravity="center"
            android:text="Left"
            android:textColor="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/text_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#30cfd0"
            android:gravity="center"
            android:text="Right"
            android:textColor="@color/white" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sasaarsenovic.customwidgetslibrary.calendar.ITSCustomCalendarView
            android:id="@+id/its_calendar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:paddingTop="25dp"
            app:calendarDatesTextColor="@color/purple_light"
            app:calendarWeekDaysTextColor="@color/sweet_green" />

        <TextView
            android:id="@+id/month_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:textColor="@color/midnight_blue"
            android:textSize="20sp" />

    </FrameLayout>

</LinearLayout>